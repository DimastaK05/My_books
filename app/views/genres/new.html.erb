<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mt-4">
      <div class="card-header">
        <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Добавить новый жанр</h4>
      </div>
      <div class="card-body">
        <%= form_with model: @genre, url: genres_path, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :name, "Название жанра", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Например: Фантастика", required: true %>
            <div class="form-text">
              Жанры помогают организовать ваши книги по категориям.
            </div>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to "Отмена", genres_path, class: "btn btn-secondary" %>
            <%= f.submit "Добавить жанр", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>